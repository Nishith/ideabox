<h1>All Ideas</h1>

<table>
  <% @ideas.each do |idea| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

      <td class="list_description">
        <dl>
          <dt><%= idea.title %></dt>
          <dd><%= truncate(strip_tags(idea.description),
                 :length => 80) %></dd>
        </dl>
      </td>

      <td class="list_actions">
        <%= link_to 'Show', idea %><br/>
        <%= link_to 'Destroy', idea,
                    :confirm => 'Are you sure?',
                    :method => :delete %>
      </td>
    </tr>
  <% end %>
  </table>